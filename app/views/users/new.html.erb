
<div id="signup">
        <div class="logContainer">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form">
                            <h3 class="text-center text-info">Sign up</h3>
                            <%= form_for @user do |f| %>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                
                                <%= f.email_field :email %>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <%= f.password_field :password %>
                            </div>

                            <div class="form-group">
                                <label for="password" class="text-info">Confirm Password:</label><br>
                                <%= f.password_field :password_confirmation %>
                            </div>
                            
                            <%= f.submit "Sign up", :class => "btn btn-info btn-md" %>
                            <% end %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="yllw"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email,'Email:', :class => "yllw" %>
  <%= f.email_field :email %>

  <%= f.label :password,'Password:', :class => "yllw" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation,'Confirm Password:', :class => "yllw" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign up", :class => "btn btn-outline-success my-2 my-sm-0" %>
<% end %>